{
  "name": "wirejs-scripts",
  "version": "1.0.0",
  "description": "Basic build and start commands for wirejs apps",
  "bin": {
    "wirejs-scripts": "./bin.js"
  },
  "scripts": {
    "build": "rimraf dist && ex-gratia && webpack",
    "build:watch": "rimraf dist && webpack --mode development --progress --watch",
    "serve": "http-server ./dist -o",
    "start": "concurrently -k -p \"[{name}]\" -n \"Build,Serve\" -c \"cyan.bold,green.bold\" \"npm run build:watch\" \"npm run serve\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/svidgen/wirejs-scripts.git"
  },
  "author": "Jon Wire",
  "license": "AGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/svidgen/wirejs-scripts/issues"
  },
  "homepage": "https://github.com/svidgen/wirejs-scripts#readme",
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^9.0.0",
    "concurrently": "^6.0.2",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^5.2.0",
    "file-loader": "^6.2.0",
    "glob": "^7.2.0",
    "http-server": "^13.0.2",
    "jsdom": "^16.5.2",
    "marked": "^2.0.1",
    "raw-loader": "^4.0.2",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.6.0"
  },
  "dependencies": {
    "ex-gratia": "^1.0.3",
    "wirejs-dom": "^1.0.4",
    "highlight.js": "^11.1.0"
  }
}
